@import "mixins"

html, body
  margin 0
  text-align center
  font-family 'Helvetica Neue', 'Helvetica', 'Arial'
  color #CCC
  width 100%
  height 100%

*
  user-select none

h2
  font-weight normal
  &:last-child
    font-size 16px
    color #ddd
    margin-top 30px

.container
  width 100%
  height 100%
  display table
  .content
    vertical-align middle
    display table-cell

#start
  color #bbb
  font-size 36px
  display inline-block
  transition all 0.2s ease-in-out
  cursor pointer
  &:hover
    font-size 40px
  &.large
    transition all 0.4s ease-in-out
    font-size 50px